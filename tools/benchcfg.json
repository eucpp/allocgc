{
  "targets": [
    {
      "name": "boehm",
      "alias": "gcbench top-down",
      "runnable": "benchmark/boehm/boehm",
      "suites": ["gc_ptr conservative", "gc_ptr", "gc_ptr incremental"],
      "params": ["top-down"]
    },
    {
      "name": "boehm",
      "alias": "gcbench bottom-up",
      "runnable": "benchmark/boehm/boehm",
      "suites": ["gc_ptr conservative", "gc_ptr", "gc_ptr incremental"],
      "params": ["bottom-up"]
    },
    {
      "name": "parallel_merge_sort",
      "alias": "parallel merge sort",
      "runnable": "benchmark/parallel_merge_sort/parallel_merge_sort",
      "suites": ["gc_ptr conservative", "gc_ptr", "gc_ptr incremental"],
      "reports": ["tex-table"]
    },
    {
      "name": "cord",
      "alias": "cord-build",
      "runnable": "benchmark/cord/cord",
      "suites": ["gc_ptr conservative", "gc_ptr", "gc_ptr incremental"],
      "params": ["build", {"len": [6]}]
    },
    {
      "name": "cord",
      "alias": "cord-substr",
      "runnable": "benchmark/cord/cord",
      "suites": ["gc_ptr conservative", "gc_ptr", "gc_ptr incremental"],
      "params": ["substr", {"len": [6]}]
    },
    {
      "name": "cord",
      "alias": "cord-flatten",
      "runnable": "benchmark/cord/cord",
      "suites": ["gc_ptr conservative", "gc_ptr", "gc_ptr incremental"],
      "params": ["flatten", {"len": [5]}]
    }
  ],
  "suites": [
    {"name": "gc_ptr conservative", "builder": "gc_ptr", "args": ["--conservative"]},
    {"name": "gc_ptr", "builder": "gc_ptr"},
    {"name": "gc_ptr incremental", "builder": "gc_ptr", "args": ["--incremental"]}
  ],
  "builders": [
    {"name": "gc_ptr", "type": "cmake", "options": ["PRECISE_GC"]}
  ],
  "printers": [
    {"name": "json", "params": {"outfn": "benchmark.json"}},
    {"name": "tex-table"},
    {"name": "time-bar-plot", "params": {"outfn": "time-plot-tmp.eps", "rownum": 2, "figsize": [30, 12]}},
    {"name": "pause-time-plot", "params": {"outfn": "pause-time-plot.eps", "rownum": 2, "figsize": [15, 40]}}
  ],
  "nruns" : 20
}